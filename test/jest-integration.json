{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".integration.spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/set-test-env.ts"],
  "globalSetup": "<rootDir>/setup-integration-global.ts",
  "setupFilesAfterEnv": ["<rootDir>/setup-integration.ts"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": [
    "../src/**/*.repository.ts"
  ],
  "coverageDirectory": "../coverage-integration",
  "testTimeout": 60000,
  "maxWorkers": 1
}
